<!-- 
	Definition of some default properties, which will be needed in 
	many propjects
-->

<project name="util.doxygen" default="echo-props" basedir="../../..">

	<import file="../config/config_doxygen.xml" />

	<macrodef name="doxygen">
		<attribute name="srcdir" />
		<attribute name="tgtdir" />
		<attribute name="config" />
		<sequential>
			<mkdir dir="@{tgtdir}" />
			<exec executable="${path.doxygen.bin}">
				<env key="SRCDIR" value="@{srcdir}" />
				<env key="TGTDIR" value="@{tgtdir}" />
				<arg line="@{config}" />
			</exec>
		</sequential>
	</macrodef>



	<target name="init" depends="config.doxygen.init"></target>


	<target name="doxygen-clean" >
		<delete dir="${dir.doxygen.output}" />
	</target>

</project>
