<!-- 
	Definition of some default properties, which will be needed in 
	many propjects
-->

<project name="util.cpp" default="echo-props" basedir="../../..">

	<import file="../config/config_cpp.xml" />

	<macrodef name="cpp-compile">
		<attribute name="name" />
		<attribute name="type" />
		<attribute name="dir" />
		<element name="sources" />
		<element name="libraries" optional="true" />
		<element name="moresources" optional="true" />
		<element name="moreincludes" optional="true" />
		<element name="morelibraries" optional="true" />
		<element name="moredefines" optional="true" />
		<sequential>
			<mkdir dir="@{dir}" />
			<cc subsystem="console" objdir="@{dir}" debug="${cpp.debug}"
				outtype="@{type}" name="${cpp.compiler}" exceptions="true"
				rtti="true" optimize="speed" outfile="@{dir}/@{name}">

				<sources />
				<moresources />

				<includepath path="${dir.cpp.inc}" />
				<moreincludes />

				<libset libs="dl" unless="cpp.is-win32" />
				<libset libs="stdc++" if="cpp.use-gcc" />
				<libset libs="gcc_s" if="cpp.use-gcc" />
				<libraries />
				<morelibraries />

				<defineset define="WIN32" if="cpp.is-win32" />
				<defineset define="DEBUG" if="cpp.is-debug" />
				<defineset define="_Debug" if="cpp.is-debug" />
				<moredefines />

			</cc>
		</sequential>
	</macrodef>

	<macrodef name="cpp-lib-compile">
		<attribute name="name" />
		<attribute name="srcdir" />
		<attribute name="outdir" />
		<attribute name="type" />
		<element name="extraincludes" optional="true" />
		<element name="extralibraries" optional="true" />
		<sequential>
			<echo
				message="create @{type} library @{name} in @{outdir}/@{type} with sources in @{srcdir}" />
			<cpp-compile name="@{name}" dir="@{outdir}/@{type}"
				type="@{type}">
				<sources>
					<fileset dir="@{srcdir}">
						<include name="*.cc" />
						<include name="*.cpp" />
						<include name="*.cxx" />
						<include name="*.c++" />
					</fileset>
				</sources>
				<moreincludes>
					<extraincludes />
				</moreincludes>
				<morelibraries>
					<extralibraries />
				</morelibraries>
			</cpp-compile>
		</sequential>
	</macrodef>

	<macrodef name="cpp-shared-lib">
		<attribute name="name" />
		<element name="moreincludes" optional="true" />
		<sequential>
			<cpp-lib-compile name="@{name}"
				outdir="${dir.cpp.build.config}" srcdir="${dir.cpp.src.lib}"
				type="shared">
				<extraincludes>
					<moreincludes />
				</extraincludes>
			</cpp-lib-compile>
		</sequential>
	</macrodef>

	<macrodef name="cpp-static-lib">
		<attribute name="name" />
		<sequential>
			<cpp-lib-compile name="@{name}"
				outdir="${dir.cpp.build.config}" srcdir="${dir.cpp.src.lib}"
				type="static">
			</cpp-lib-compile>
		</sequential>
	</macrodef>


	<macrodef name="cpp-test-compile">
		<attribute name="name" />
		<attribute name="outdir" />
		<attribute name="type" />
		<attribute name="libs" />
		<element name="test-sources" />
		<sequential>
			<echo
				message="create @{type} test program @{name} in @{outdir}/@{type}" />
			<cpp-compile name="@{name}" dir="@{outdir}/@{type}"
				type="executable">
				<sources>
					<test-sources />
				</sources>
				<libraries>
					<libset dir="${dir.cpp.build.config}/@{type}"
						libs="@{libs}" type="@{type}" />
				</libraries>
			</cpp-compile>
		</sequential>
	</macrodef>

	<macrodef name="cpp-shared-test">
		<attribute name="name" />
		<attribute name="libs" />
		<sequential>
			<cpp-test-compile name="@{name}"
				outdir="${dir.cpp.build.config}" type="shared" libs="@{libs}">
				<test-sources>
					<fileset dir="${dir.cpp.src.test}"
						includes="@{name}.cpp" />
					<fileset dir="${dir.cpp.src.test}"
						includes="@{name}.cc" />
					<fileset dir="${dir.cpp.src.test}"
						includes="@{name}.cxx" />
					<fileset dir="${dir.cpp.src.test}"
						includes="@{name}.c++" />
				</test-sources>
			</cpp-test-compile>
		</sequential>
	</macrodef>

	<macrodef name="cpp-static-test">
		<attribute name="name" />
		<attribute name="libs" />
		<sequential>
			<cpp-test-compile name="@{name}"
				outdir="${dir.cpp.build.config}" type="static" libs="@{libs}">
				<test-sources>
					<fileset dir="${dir.cpp.src.test}"
						includes="@{name}.cpp" />
					<fileset dir="${dir.cpp.src.test}"
						includes="@{name}.cc" />
					<fileset dir="${dir.cpp.src.test}"
						includes="@{name}.cxx" />
					<fileset dir="${dir.cpp.src.test}"
						includes="@{name}.c++" />
				</test-sources>
			</cpp-test-compile>
		</sequential>
	</macrodef>


	<target name="init" depends="config.cpp.init"></target>


	<target name="cpp-clean" depends="init">
		<delete dir="${dir.cpp.build.config}" />
	</target>

</project>
