<!-- 
	Definition of some default properties, which will be needed in 
	many propjects
-->

<project name="util.xsl" default="echo-props" basedir="../../..">

	<import file="../config/config_xsl.xml" />

	<macrodef name="saxon">
		<attribute name="source" />
		<attribute name="target" />
		<attribute name="style" />
		<element name="args" optional="true" />
		<element name="params" optional="true" />
		<sequential>
			<echo message="source: @{source}" />
			<echo message="target: @{target}" />
			<echo message="style:  @{style}" />
			<java jar="${jar.xsl.saxon}" fork="true" failonerror="false"
				maxmemory="256m">
				<args />
				<arg value="-o" />
				<arg value="@{target}" />
				<arg value="@{source}" />
				<arg value="@{style}" />
				<params />
			</java>
		</sequential>
	</macrodef>


	<target name="init" depends="config.xsl.init"></target>


	<target name="xsl-clean" depends="init"></target>

</project>
